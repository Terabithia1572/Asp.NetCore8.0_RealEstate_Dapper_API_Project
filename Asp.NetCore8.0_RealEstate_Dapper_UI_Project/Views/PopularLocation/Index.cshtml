@model List<ResultPopularLocationDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Popüler Lokasyonlar</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir Adı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <th scope="row"><img src="@item.PopularLocationImageURL" /> @item.PopularLocationCityName</th>
                                    <td></td>

                                    <td><a href="/PopularLocation/DeletePopularLocation/@item.PopularLocationID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/PopularLocation/UpdatePopularLocation/@item.PopularLocationID" class="btn btn-success">Güncelle</a></td>


                                </tr>
                            }
                        </tbody>
                        <td><a href="/PopularLocation/CreatePopularLocation/" class="btn btn-info">Yeni Popüler Lokasyon Girişi</a></td>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

