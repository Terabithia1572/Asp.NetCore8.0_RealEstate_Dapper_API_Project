@model List<ResultWhoWeAreDetailDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count=0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Alt Başlık</th>                             
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <th scope="row">@item.Title</th>
                                    <td>@item.Subtitle</td>

                                    <td><a href="/WhoWeAreDetail/DeleteWhoWeAreDetail/@item.WhoWeAreDetailID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/WhoWeAreDetail/UpdateWhoWeAreDetail/@item.WhoWeAreDetailID" class="btn btn-success">Güncelle</a></td>


                                </tr>
                            }
                        </tbody>
                        <td><a href="/WhoWeAreDetail/CreateWhoWeAreDetail/" class="btn btn-info">Yeni Biz Kimiz Alanı Girişi</a></td>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

