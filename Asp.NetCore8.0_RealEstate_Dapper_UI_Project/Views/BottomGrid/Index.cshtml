@model List<ResultBottomGridDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Önce Çıkan Alanlar Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hizmet Başlığı</th>
                                <th scope="col">Hizmet İçeriği</th>
                                <th scope="col">Icon</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <th scope="row">@item.BottomGridTitle</th>
                                    <th scope="row">@item.BottomGridDescription</th>
                                    <th scope="row">@item.BottomGridIcon</th>
                                    <td><a href="/BottomGrid/DeleteBottomGrid/@item.BottomGridID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/BottomGrid/UpdateBottomGrid/@item.BottomGridID" class="btn btn-success">Güncelle</a></td>


                                </tr>
                            }
                        </tbody>
                        <td><a href="/BottomGrid/CreateBottomGrid/" class="btn btn-info">Yeni Servis Girişi</a></td>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

