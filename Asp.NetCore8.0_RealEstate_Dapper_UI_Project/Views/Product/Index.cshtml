@model List<ResultProductDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ProductID</th>
                                    <td>@item.ProductTitle</td>
                                    <td>@item.ProductCity</td>
                                    <td>@item.ProductDistrict</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.ProductPrice</td>
                                    <td>@item.ProductType</td>
                                    <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
                                    <td><a href="/Product/ProductDetail/@item.ProductID" class="btn btn-warning">Sitede Gör</a></td>


                                </tr>
                            }
                        </tbody>
                        <td><a href="/Product/CreateProduct/" class="btn btn-info">Yeni İlan Girişi</a></td>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

